<div class="container">
  <h2>Send daily <strong>automatic</strong> text messages to help stop smoking</h2>
  <h2 style="color: #ff0000"><%= params['msg'] %></h2>
  <h4><strong>One Time</strong> Setup is as easy as 1 - 2 - 3</h4>
  <%#= form_for :receiver, :url => save_receiver_data_url do |f| %>
  <%= form_for :receiver,  do |f| %>
  <%#= f.error_messages %>
  <p>
      1.  Phone Number <%=f.text_field :phone %>
      and Name: <%=f.text_field :name %><br/>
      2. Select Time Zone: <%=time_zone_select( "receiver", "timezone", ActiveSupport::TimeZone.us_zones, :default => "Pacific Time (US & Canada)") %> <br/>
      3. Choose messages and times
    </p>
    <% end %>
  </div>

<table class="zebra-striped">
  <tr>
    <th>Message text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.message_text %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Message', new_message_path %>
